@Ordering_Api_HostAddress = http://localhost:5224

### Get all orders
GET {{Ordering_Api_HostAddress}}/orders
Accept: application/json

###

### Get order by ID
GET {{Ordering_Api_HostAddress}}/orders/1
Accept: application/json

###

### Create new order
POST {{Ordering_Api_HostAddress}}/orders
Content-Type: application/json

{
  "customerName": "Alice Johnson",
  "customerEmail": "alice.johnson@example.com",
  "items": [
    {
      "productName": "Gaming Monitor",
      "quantity": 1,
      "unitPrice": 399.99
    },
    {
      "productName": "HDMI Cable",
      "quantity": 2,
      "unitPrice": 19.99
    }
  ]
}

###

### Update order status to Confirmed
PUT {{Ordering_Api_HostAddress}}/orders/1/status
Content-Type: application/json

{
  "status": "Confirmed"
}

###

### Update order status to Shipped
PUT {{Ordering_Api_HostAddress}}/orders/1/status
Content-Type: application/json

{
  "status": "Shipped"
}

###

### Update order status to Delivered
PUT {{Ordering_Api_HostAddress}}/orders/1/status
Content-Type: application/json

{
  "status": "Delivered"
}

###

### Delete order
DELETE {{Ordering_Api_HostAddress}}/orders/2
